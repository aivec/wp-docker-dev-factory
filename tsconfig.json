{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "exclude": ["webpack.*.js", "node_modules", "dist", "test", "ui"],
  "include": ["src/**/*.ts"]
}
